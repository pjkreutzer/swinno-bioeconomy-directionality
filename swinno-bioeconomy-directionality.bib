}

@article{losacker2023RethinkingBioeconomyInnovationa,
  title = {Rethinking Bioeconomy Innovation in Sustainability Transitions},
  author = {Losacker, Sebastian and Heiden, Stefanie and Liefner, Ingo and Lucas, Henning},
  year = {2023},
  month = aug,
  journal = {Technology in Society},
  volume = {74},
  pages = {102291},
  issn = {0160-791X},
  doi = {10.1016/j.techsoc.2023.102291},
  urldate = {2024-10-18},
  abstract = {Over the past two decades, a new research field dealing with ``sustainability transitions'' has emerged, analyzing the transformation of socio-technical systems towards more sustainable futures. While there is consensus on the crucial role of the bioeconomy in sustainability transitions research, we argue that the true potential of many bioeconomy innovations is not yet sufficiently recognized and assessed. Much of the literature on the bioeconomy focuses on the bio-based substitution of environmentally harmful goods, neglecting the disruptive potential of innovative biotechnologies. In this commentary, we present some examples on advanced biotechnology and we invite sustainability transitions scholars to rethink their notion of bioeconomy innovations.}
}

@article{lovric2020FactorsDevelopmentInnovations,
  title = {Factors behind Development of Innovations in {{European}} Forest-Based Bioeconomy},
  author = {Lovri{\'c}, Nata{\v s}a and Lovri{\'c}, Marko and Mavsar, Robert},
  year = {2020},
