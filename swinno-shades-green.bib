@article{parks2022DirectionalityTransformativeInnovation,
  title = {Directionality in Transformative Innovation Policy: Who Is Giving Directions?},
  shorttitle = {Directionality in Transformative Innovation Policy},
  author = {Parks, Darcy},
  year = {2022},
  month = jun,
  journal = {Environmental Innovation and Societal Transitions},
  volume = {43},
