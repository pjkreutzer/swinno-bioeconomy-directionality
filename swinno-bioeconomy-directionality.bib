@article{hodson2010CanCitiesShapea,
  title = {Can Cities Shape Socio-Technical Transitions and How Would We Know If They Were?},
  author = {Hodson, Mike and Marvin, Simon},
  year = {2010},
  month = may,
  journal = {Research Policy},
  series = {Special {{Section}} on {{Innovation}} and {{Sustainability Transitions}}},
  volume = {39},
