  author = {Jankovsk{\'y}, Martin and {Garc{\'i}a-J{\'a}come}, Sandra P. and Dvo{\v r}{\'a}k, Ji{\v r}{\'i} and Nyarko, Isaac and H{\'a}jek, Miroslav},
